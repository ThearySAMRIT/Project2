<div class="col-md-8 col-md-offset-2">
  <li id="comment-<%= comment.id %>">
    <%= link_to gravatar_for(comment.user), comment.user %>
    <span class="user"><%= link_to comment.user.full_name, @post.user %></span>
    <span class="content"><%= comment.content %></span>\
    <span class="timestamp">
      <%= t ".replied" %><%= time_ago_in_words comment.created_at %><%= t ".ago" %>
    </span>
    <% if logged_in? %>
      <% if current_user? comment.user or current_user? @post.user %>
        <%= link_to t(".delete"), [comment.post, comment], method: :delete,
          data: {confirm: t(".confirm")} %>
      <% end %>
    <% end %>
  </li>
</div>
