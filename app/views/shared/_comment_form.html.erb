<%= form_for [@post, @post.comments.build] do |f| %>
   <%= render "shared/error_messages", object: f.object %>
   <div class="row">
     <div class="col-md-10 field">
       <%= f.text_area :content, placeholder: "Write a comment...", class: "box" %>
     </div>
     <%= f.submit "Comment", class: "col-md-2 btn btn-primary" %>
   </div>
 <% end %>
