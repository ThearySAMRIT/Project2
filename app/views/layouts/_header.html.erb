<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".social_media"), root_path, class: "logo" %>
    <nav>
      <ul class="navbar-nav navbar-right">
      <div class="searchboxx">
        <%= form_tag posts_path, method: :get do %>
          <%= text_field_tag :search, params[:search], class: "search-box",
            placeholder: t(".search") %>
        <% end %>
      </div>
      </ul>

      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t(".home"), root_path %></li>
        <% if logged_in? %>
        <li><%= link_to t(".users"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), current_user %></li>
            <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".logout"), logout_path, method: :delete %>
            </li>
            <% if current_user.admin? %>
              <li class="divider"></li>
              <li>
                <%= link_to "Statistics", statistics_path %>
              </li>
            <% end %>
          </ul>
        </li>
        <% else %>
        <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
