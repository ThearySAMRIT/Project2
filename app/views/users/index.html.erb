<% provide :title, t(".all-users") %>
<h1><%= t ".all-users" %></h1>

<%= will_paginate @users %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.full_name, user %>
      <% if current_user.admin? && !current_user?(user) %>
       | <%= link_to t(".delete"), user, method: :delete, data: {confirm: t(".confirm")} %>
      <% end %>
      <h3><%= user.content %></h3>
    </li>
  <% end %>
</ul>
<%= will_paginate @users %>
