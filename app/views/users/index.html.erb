<% provide(:title, t(".all") %>
<h1><%= t ".all" %></h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.gravatar.size %>
      <%= link_to user.full_name, user %>
      <% if current_user %>
        <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "delete", user, method: :delete, data: {confirm: "You sure?"} %>
        <% end %>
      <% end %>
      <h2><%= user.content %></h2>
    </li>
  <% end %>
</ul>
