<% provide :title, @user.full_name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <h3><%= @user.full_name %></h3>
      </h1>
      <pre>
        <span class="content"><h4><%= @user.content %></h4>
        </span>
      </pre>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.posts.any? %>
      <h3><%= t ".post" %>(<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
